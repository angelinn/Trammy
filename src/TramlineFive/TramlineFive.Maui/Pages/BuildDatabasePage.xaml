<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                          xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                          x:Class="TramlineFive.Maui.Pages.BuildDatabasePage">
    
    <Grid BackgroundColor="{AppThemeBinding Light={DynamicResource BackgroundColor}, Dark={DynamicResource DarkBackgroundColor}}">
        <VerticalStackLayout Padding="20" Spacing="10" HorizontalOptions="Center" VerticalOptions="Center">
            <Label Text="Подготовка на базата данни…" FontSize="24" HorizontalTextAlignment="Center"/>
            <Label Text="(може да отнеме около 1 минута)" FontSize="16" HorizontalOptions="Center" />
            <ProgressBar x:Name="ProgressBar" Progress="0" ProgressColor="{AppThemeBinding Light={DynamicResource PrimaryColor}, Dark={DynamicResource DarkPrimaryColor}}" />
            <Label x:Name="StatusLabel" Text="Зареждане..." />
        </VerticalStackLayout>
    </Grid>
</ContentPage>
